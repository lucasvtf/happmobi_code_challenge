{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "$app": ["./src/app.js"],
      "$models/": ["./src/models/"],
      "$test/": ["./_tests_/"],
      "$errors/": ["./src/errors/"],
      "$shared/": ["./src/shared/"],
      "$modules/": ["./src/modules/"],
    }
  },
  "include": [
    "src/*/",
    "_tests_"
  ],
  "exclude": [
    "dist"
  ]
}